# Memento MCP Server 환경 설정

# 데이터베이스 설정
DB_PATH=./data/memory.db
DB_INIT_ON_START=true

# MCP 서버 설정
MCP_SERVER_NAME=memento-memory
MCP_SERVER_VERSION=0.1.0
MCP_SERVER_PORT=3000

# 임베딩 설정 (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# 검색 설정
SEARCH_DEFAULT_LIMIT=10
SEARCH_MAX_LIMIT=50

# 망각 정책 설정 (시간 단위: 시간)
FORGET_WORKING_TTL=48
FORGET_EPISODIC_TTL=2160  # 90일
FORGET_SEMANTIC_TTL=-1    # 무기한 (-1)
FORGET_PROCEDURAL_TTL=-1  # 무기한 (-1)

# 로깅 설정
LOG_LEVEL=info
LOG_FILE=./logs/memento.log

# 개발 설정
NODE_ENV=development
