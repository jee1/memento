{
  "name": "memento-mcp-server",
  "version": "0.1.0",
  "description": "AI Agent 기억 보조 MCP 서버 - 사람의 기억 구조를 모사한 스토리지+검색+요약+망각 메커니즘",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "dev:http": "tsx watch src/server/http-server.ts",
    "build": "tsc && npm run copy:assets",
    "copy:assets": "node src/scripts/copy-assets.js",
    "start": "node dist/server/index.js",
    "start:http": "node dist/server/http-server.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:init": "tsx src/database/init.ts",
    "db:migrate": "tsx src/database/migrate.ts",
    "test:client": "tsx src/test-client.ts",
    "test:search": "tsx src/test-search.ts",
    "test:embedding": "tsx src/test-embedding.ts",
    "test:lightweight-embedding": "tsx src/test-lightweight-embedding.ts",
    "test:forgetting": "tsx src/test-forgetting.ts",
    "test:performance": "tsx src/test/performance-benchmark.ts",
    "test:monitoring": "tsx src/test-performance-monitoring.ts",
    "test:error-logging": "tsx src/test-error-logging.ts",
    "build:client": "cd packages/mcp-client && npm run build",
    "dev:client": "cd packages/mcp-client && npm run dev",
    "clean:client": "cd packages/mcp-client && npm run clean",
    "publish:client": "cd packages/mcp-client && npm publish"
  },
  "keywords": [
    "mcp",
    "memory",
    "ai",
    "agent",
    "sqlite",
    "vector-search",
    "typescript"
  ],
  "author": "Memento Team",
  "license": "MIT",
  "dependencies": {
    "@memento/client": "file:packages/mcp-client",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/memento.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/memento/issues"
  },
  "homepage": "https://github.com/your-org/memento#readme"
}
